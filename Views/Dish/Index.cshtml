<div class="jumbotron">
    <h1>Welcome to Pandas</h1>
</div>

<a href="/new"><button class="btn btn-info">New Dish</button></a>

<table class="table table-striped table-hover">
    <tr>
        <th>Name</th>
        <th>Chef</th>
        <th>Calories</th>
        <th>Tastiness</th>
        <th>Description</th>
        <th>Created At</th>
    </tr>
    @foreach(var dish in ViewBag.Dishes)
    {
        <tr>
            <td><a href="/dish/@dish.DishId">@dish.Name</a></td>
            <td>@dish.Chef</td>
            <td>@dish.Calories</td>
            <td>@dish.Tastiness</td>
            <td>@dish.Description</td>
            <td>@dish.CreatedAt</td>
        </tr>
    }

</table>